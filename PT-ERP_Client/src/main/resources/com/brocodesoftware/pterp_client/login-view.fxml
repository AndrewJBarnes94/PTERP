<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.brocodesoftware.pterp_client.LoginController">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Username" minWidth="80"/>
        <TextField fx:id="usernameField" promptText="Enter username"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Password" minWidth="80"/>
        <PasswordField fx:id="passwordField" promptText="Enter password"/>
    </HBox>

    <Button text="Login" onAction="#onLoginClick" prefWidth="250"/>

    <Hyperlink text="Create Account" onAction="#onNavigateToCreateAccount"/>

</VBox>
